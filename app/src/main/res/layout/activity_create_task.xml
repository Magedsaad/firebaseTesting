<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trying.developing.firebasetesting.CreateTaskActivity">

<EditText
    android:id="@+id/memberEmailid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="Enter member Email"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="100dp"
    />
    <EditText
        android:id="@+id/tasknameid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter task name"
        android:layout_below="@id/memberEmailid"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/taskdeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/tasknameid"
        android:layout_centerHorizontal="true"
        android:hint="Enter deadline"
        />
    <EditText
        android:id="@+id/taskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/taskdeadline"
        android:layout_centerHorizontal="true"
        android:hint="Enter task description"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/taskDescription"
        android:layout_centerHorizontal="true"
        android:text="Assign"
        android:onClick="createTask"
        />

</RelativeLayout>
